            ðŸš— RideHub
          </Link>

          {/* Navigation Links */}
          <div className="hidden md:flex items-center space-x-6">
            <Link to="/" className="flex items-center hover:text-primary-200 transition">
              <FaHome className="mr-1" />
              Home
            </Link>
            <Link to="/vehicles" className="flex items-center hover:text-primary-200 transition">
              <FaCar className="mr-1" />
              Browse Vehicles
            </Link>
            
            {isShopOwner && (
